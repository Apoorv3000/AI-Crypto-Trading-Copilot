# Environment variables for AI Decision Engine

# Anthropic API Key (required for LLM-based agents)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Logging configuration
LOG_LEVEL=INFO

# Optional: Server configuration
HOST=0.0.0.0
PORT=8000

# Optional: Model configuration
LLM_MODEL=claude-3-5-sonnet-20240620
LLM_TEMPERATURE=0.1

# Optional: Risk management defaults
DEFAULT_STOP_LOSS_PCT=0.05
DEFAULT_MAX_POSITION_PCT=0.10
DEFAULT_MAX_EXPOSURE=0.50
DEFAULT_MAX_VOLATILITY=0.05
